{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "packages/components/**/*.ts",
    "packages/components/**/*.vue",
    "packages/utils/**/*.ts",
    "vue-shim.d.ts",
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
